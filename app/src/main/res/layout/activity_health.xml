<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthActivity"
    android:background="@drawable/home_background">
    <com.euxcet.viturering.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="健康检测"/>
    <FrameLayout
        android:id="@+id/preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/control_panel"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white">
        <com.giftedcat.wavelib.view.WaveView
            android:id="@+id/wave_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:draw_mode="normal"
            app:grid_visible="false"
            app:max_value="100"
            app:wave_line_stroke_width="8" />
        <TextView
            android:id="@+id/wave_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            tools:text="72"
            android:textSize="24sp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="26dp"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/control_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="center">
        <TextView
            android:id="@+id/heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心率检测"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:background="@drawable/shape_normal_button"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"/>
        <TextView
            android:id="@+id/blood_oxygen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血氧检测"
            android:layout_marginHorizontal="10dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_normal_button"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"/>
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消检测"
            android:layout_marginHorizontal="10dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_normal_button"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>