<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:id="@+id/seek_toast"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:background="@drawable/shape_video_toast_back"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seek_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:32"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textAlignment="textEnd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginHorizontal="6dp"/>
            <TextView
                android:id="@+id/seek_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1:20:21"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/seek_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="24dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressBackgroundTint="#89FFFFFF"
            android:progressTint="#ffffff"
            tools:progress="50"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/paused_toast"
        android:layout_width="160dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:background="@drawable/shape_video_toast_back"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_play"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已暂停"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginStart="6dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#7F000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        tools:visibility="visible">
        <TextView
            android:id="@+id/play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/play"
            app:layout_constraintTop_toTopOf="@+id/play"
            app:layout_constraintBottom_toBottomOf="@+id/play"
            tools:text="00:05"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/play_time"
            app:layout_constraintTop_toTopOf="@+id/play_time"
            app:layout_constraintEnd_toStartOf="@+id/total_time"
            app:layout_constraintBottom_toBottomOf="@+id/play_time"
            android:layout_marginHorizontal="6dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressBackgroundTint="#89FFFFFF"
            android:progressTint="#ffffff"
            tools:progress="50"/>
        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/play_time"
            app:layout_constraintBottom_toBottomOf="@+id/play_time"
            tools:text="1:00:00"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_play"
            android:layout_marginStart="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>