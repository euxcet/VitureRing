<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#7F000000">
    <TextView
        android:id="@+id/play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/play"
        app:layout_constraintTop_toTopOf="@+id/play"
        app:layout_constraintBottom_toBottomOf="@+id/play"
        tools:text="00:05"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textColor="@color/white"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/play_time"
        app:layout_constraintTop_toTopOf="@+id/play_time"
        app:layout_constraintEnd_toStartOf="@+id/total_time"
        app:layout_constraintBottom_toBottomOf="@+id/play_time"
        android:layout_marginHorizontal="6dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressBackgroundTint="#89FFFFFF"
        android:progressTint="#ffffff"
        tools:progress="50"/>
    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/play_time"
        app:layout_constraintBottom_toBottomOf="@+id/play_time"
        tools:text="1:00:00"
        android:layout_marginEnd="12dp"
        android:textSize="14sp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/play"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_play"
        android:layout_marginStart="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>