<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.writing.HandWritingActivity">
    <com.euxcet.viturering.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="手写输入"/>
    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/words_list"
        android:padding="16dp"
        android:textSize="24sp"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#fff"/>
    <TextView
        android:id="@+id/words_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/input"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="6dp"
        android:text="候选词"/>
    <GridView
        android:id="@+id/words_list"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/words_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:gravity="center"/>
    <com.euxcet.viturering.pages.writing.HandwritingControlView
        android:id="@+id/control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>